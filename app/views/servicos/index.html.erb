<div class="page-header">
  <%= link_to new_servico_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Servico
  <% end %>
  <h1>Servicos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th><%= sort_link(@q, :descricao) %></th>
            <th><%= sort_link(@q, :valor) %></th>
            <th>Ações</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @servicos) do |servico| %>
            <td><%= servico.descricao %></td>
            <td><%= servico.valor %></td>
            <td>
          <%= link_to servico do %>
            <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
          <% end %>
          <%= link_to edit_servico_path(servico) do %>
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
          <% end %>
          <%= link_to servico, method: :delete, data: { confirm: 'Tem certeza?' } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
