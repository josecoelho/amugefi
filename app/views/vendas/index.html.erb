<div class="page-header">
  <%= link_to new_venda_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Venda
  <% end %>
  <h1>Vendas</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th><%= sort_link(@q, :cliente) %></th>
            <th><%= sort_link(@q, :descricao) %></th>
            <th><%= sort_link(@q, :data_faturamento) %></th>
            <th><%= sort_link(@q, :data_cobranca) %></th>
            <th><%= sort_link(@q, :pago) %></th>
            <th><%= sort_link(@q, :valor) %></th>
            <th>Ações</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @vendas) do |venda| %>
            <td><%= venda.cliente %></td>
            <td><%= venda.descricao %></td>
            <td><%= venda.data_faturamento %></td>
            <td><%= venda.data_cobranca %></td>
            <td><%= venda.pago %></td>
            <td><%= venda.valor %></td>
            <td>
          <%= link_to venda do %>
            <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
          <% end %>
          <%= link_to edit_venda_path(venda) do %>
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
          <% end %>
          <%= link_to venda, method: :delete, data: { confirm: 'Tem certeza?' } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
