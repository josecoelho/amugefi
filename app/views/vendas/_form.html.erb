<%= simple_form_for(@venda) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :cliente %>
    <%= f.input :descricao %>
    <%= f.input :data_faturamento %>
    <%= f.input :data_cobranca %>
    <%= f.input :pago %>
    <%= f.input :valor %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
