<%= simple_form_for(@conta) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :agencia %>
    <%= f.input :conta_corrente %>
    <%= f.input :boleto_nome_cedente %>
    <%= f.input :boleto_documento_cedente %>
    <%= f.input :boleto_convenio %>
    <%= f.input :boleto_carteira %>
    <%= f.input :boleto_variacao %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
